<Window x:Class="richSweep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="750" Left="900" Top="50" Background="#EEE"
        KeyDown="Window_KeyDown">
    <Grid Name="MainGrid" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="debugBlock" Grid.Row="0"></TextBlock>
        <UniformGrid Grid.Row="2" Rows="1" Height="30" HorizontalAlignment="Stretch">
            <TextBlock Name="TimePassedBlock" Margin="1" Width="90" Height="30"  Background="#333" Foreground="Red" FontSize="15" TextAlignment="Center" Padding="5">999</TextBlock>
            <TextBlock Name="BombesRemainingBlock" Margin="1" Width="90" Height="30"  Background="#333" Foreground="Red" FontSize="15" TextAlignment="Center" Padding="5">999</TextBlock>
        </UniformGrid>
    </Grid>
</Window>
